[filetype]
rules = [
  { mime = "image/*", fg = "#{{base0C-hex}}" },
  { mime = "{audio, video}/*", fg = "#{{base0A-hex}}" },
   
  { mime = "application/{pdf,doc,rtf}", fg = "#{{base0B-hex}}" },
  
  { mime = "application/{{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*},", fg = "#{{base0E-hex}}" },
  
  { mime = "inode/directory", fg = "#{{base0D-hex}}" },
  { mime = "*", fg = "#{{base05-hex}}" },
]


