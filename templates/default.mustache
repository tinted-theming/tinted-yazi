unset_main = { fg = "#{{base00-hex}}", bg = "#{{base08-hex}}", bold = true }
unset_alt = { fg = "#{{base08-hex}}", bg = "#{{base02-hex}}" }

[status]
perm_exec = { fg = "#{{base0B-hex}}" }
